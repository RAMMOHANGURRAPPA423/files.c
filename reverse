#include<stdio.h>
int rev(int num);
int main(){
    int num,res;
    printf("enter a number:");
    scanf("%d",&num);
    res=rev(num);
    printf("result of a given number is %d",res);
    return 0;
}
int sum,r;
int rev(int num){
  //static sum,r;
    if(num>0){
        r=num%10;
        sum=sum*10+r;
        rev(num/10);
    }
    else
    //return 0;
    return sum;
}
