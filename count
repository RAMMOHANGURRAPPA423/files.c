#include<stdio.h>
#include<stdlib.h>
int main(){
        char ch;
        int n=1;
FILE *fp=NULL;
        fp=fopen("xyz.txt","r");
        if(fp==NULL)
        {
                printf("no file");
                exit(1);
        }

while((ch=fgetc(fp))!=EOF){
        if(ch=='\n'){
                n=n+1;
        }
}

        fclose(fp);
        printf("lines are :%d\n",n);

}
